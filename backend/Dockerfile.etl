FROM python:3.11-slim

WORKDIR /app

# Install deps
COPY requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

# Copy your backend code (db.py, models.py, etl/, etc.)
COPY . /app

# Default: run the ETL
CMD ["python", "etl/backfill_last_14_days.py", "--days", "3"]
